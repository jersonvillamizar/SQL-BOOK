-- SQLBook: Code
SELECT CONCAT(FirstName, ' ', LastName) AS 'Nombre completo'
FROM `Persons`;
SELECT LENGTH(CONCAT(FirstName, ' ', LastName)) as 'Longitud'
FROM `Persons`;
SELECT LENGTH(CONCAT(FirstName, ' ', LastName)) as 'Longitud', CONCAT(FirstName, ' ', LastName) AS 'Nombre completo'
FROM `Persons`;
